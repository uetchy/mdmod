{
  "name": "mdmod",
  "description": "In-place string replacement for Markdown",
  "version": "1.0.0",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io)",
  "scripts": {
    "build": "yarn build:ts --minify --dts",
    "build:ts": "tsup src/cli.ts src/index.ts -d lib",
    "clean": "shx rm -rf lib",
    "dev": "yarn build:ts --watch",
    "md": "mdmod README.md --define.version v$npm_package_version",
    "prepublishOnly": "yarn clean && yarn build",
    "test": "yarn build && jest"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "dependencies": {
    "cac": "^6.7.11",
    "chalk": "^4.1.2",
    "debug": "^4.3.2",
    "epicfail": "^3.0.0",
    "globby": "^11.0.2",
    "string-replace-async": "^2.0.0",
    "vm2": "^3.9.5"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "execa": "^5.1.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "mdmod-plugin-toc": "^0.1.1",
    "mdmod-plugin-top": "^0.1.0",
    "shx": "^0.3.3",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tsup": "^5.6.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.md": "mdmod --define.version=$(git describe --tags --match 'v*' --abbrev=0)"
  },
  "homepage": "https://github.com/uetchy/mdmod",
  "repository": {
    "type": "git",
    "url": "https://github.com/uetchy/mdmod.git"
  },
  "bugs": {
    "url": "https://github.com/uetchy/mdmod/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "in-place",
    "markdown",
    "mdmod",
    "replace"
  ]
}
