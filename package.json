{
  "name": "mdmod",
  "description": "In-place string replacement for Markdown",
  "version": "0.3.0",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io)",
  "scripts": {
    "build": "yarn build:ts --minify --dts",
    "build:ts": "tsup src/cli.ts src/index.ts -d lib",
    "clean": "shx rm -rf lib",
    "dev": "yarn build:ts --watch",
    "md": "mdmod README.md --define.version $(git describe --tags --match 'v*' --abbrev=0)",
    "prepublishOnly": "yarn clean && yarn build",
    "test": "yarn build && jest"
  },
  "dependencies": {
    "cac": "^6.6.1",
    "chalk": "^4.1.0",
    "debug": "^4.1.1",
    "epicfail": "^0.4.2",
    "globby": "^11.0.1",
    "string-replace-async": "^2.0.0",
    "vm2": "^3.9.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "execa": "^4.0.3",
    "jest": "^26.1.0",
    "mdmod-plugin-toc": "^0.1.1",
    "shx": "^0.3.2",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "tsup": "^3.4.2",
    "typescript": "^3.9.7"
  },
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uetchy/mdmod.git"
  },
  "bugs": {
    "url": "https://github.com/uetchy/mdmod/issues"
  },
  "homepage": "https://github.com/uetchy/mdmod",
  "keywords": [
    "in-place",
    "markdown",
    "mdmod",
    "replace"
  ],
  "license": "Apache-2.0"
}
