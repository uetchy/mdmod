{
  "name": "mdmod",
  "description": "In-place string replacement for Markdown",
  "version": "0.4.0",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io)",
  "scripts": {
    "build": "yarn build:ts --minify --dts",
    "build:ts": "tsup src/cli.ts src/index.ts -d lib",
    "clean": "shx rm -rf lib",
    "dev": "yarn build:ts --watch",
    "md": "mdmod README.md --define.version v$npm_package_version",
    "prepublishOnly": "yarn clean && yarn build",
    "test": "yarn build && jest"
  },
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "dependencies": {
    "cac": "^6.7.2",
    "chalk": "^4.1.0",
    "debug": "^4.3.1",
    "epicfail": "^1.0.0",
    "globby": "^11.0.2",
    "string-replace-async": "^2.0.0",
    "vm2": "^3.9.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "execa": "^5.0.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mdmod-plugin-toc": "^0.1.1",
    "mdmod-plugin-top": "^0.1.0",
    "shx": "^0.3.3",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "tsup": "^4.6.1",
    "typescript": "^4.2.3"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.md": [
      "mdmod --define.version=$(git describe --tags --match 'v*' --abbrev=0)"
    ]
  },
  "homepage": "https://github.com/uetchy/mdmod",
  "repository": {
    "type": "git",
    "url": "https://github.com/uetchy/mdmod.git"
  },
  "bugs": {
    "url": "https://github.com/uetchy/mdmod/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "in-place",
    "markdown",
    "mdmod",
    "replace"
  ]
}
